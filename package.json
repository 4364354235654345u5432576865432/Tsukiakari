{
  "name": "electron-quick-start",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "/src/browser/src/main.js",
  "scripts": {
    "dev": "gulp serve & npm run watch:stylus",
    "start": "electron src/browser/src/main.js",
    "build:js": "browserify --extension=js -o src/renderer/dist/bundle.js src/renderer/src/index.js",
    "watch": "npm run watch:js & npm run watch:stylus",
    "watch:js": "watchify --extension=js -o src/renderer/dist/bundle.js src/renderer/src/index.js",
    "watch:stylus": "stylus src/renderer/stylus/ --watch  --out src/renderer/stylesheets/",
    "build:stylus": "stylus src/renderer/stylus/ --out src/renderer/stylesheets/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atom/electron-quick-start.git"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/atom/electron-quick-start/issues"
  },
  "homepage": "https://github.com/atom/electron-quick-start#readme",
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "electron-connect": "^0.3.3",
    "electron-prebuilt": "^0.36.0",
    "gulp": "^3.9.0",
    "stylus": "^0.53.0",
    "watchify": "^3.6.1"
  },
  "dependencies": {
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.3",
    "redux": "^3.0.5"
  },
  "babel": {
        "presets": ["es2015"]
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  }
}
