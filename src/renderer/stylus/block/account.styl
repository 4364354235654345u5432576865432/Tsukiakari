.account
  &__avatar
    width 32px
    height auto
    border-radius 5px
    margin 0 auto 23px auto
    display block
    position relative
    animation-duration 0.1s
    animation-fill-mode both  
    animation-name fadeInZoom
    border solid 2px rgba(0,0,0,0)
    transition all 0.1s

    &:hover
      border solid 2px #BDC3C7

  &__tooltip
    background #fff
    width 160px
    height auto
    position absolute
    border-radius 3px


    &-background
      width 100%
      height 50px
      border-radius 3px 3px 0 0
      position relative

