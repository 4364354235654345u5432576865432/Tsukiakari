.account
  &__avatar
    width 32px
    height auto
    border-radius 5px
    margin 0 auto 23px auto
    display block
    position relative

  &__tooltip
    background #fff
    width 160px
    height auto
    position absolute
    border-radius 3px
    left 56px
    top -20px

    &-background
      width 100%
      height 50px
      border-radius 3px 3px 0 0
      position relative
