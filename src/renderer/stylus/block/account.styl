.account
  &__avatar
    width 32px
    height auto
    border-radius 5px
    margin 0 auto 23px auto
    display block
    position relative
    animation-duration 0.2s
    animation-fill-mode both  
    animation-name fadeInZoom

  &__tooltip
    background #fff
    width 160px
    height auto
    position absolute
    border-radius 3px
    left 56px
    top -20px

    &-background
      width 100%
      height 50px
      border-radius 3px 3px 0 0
      position relative

// TODO: move to anim
@keyframes fadeInZoom
  from
    opacity 0
    transform translate3d(-2%, 0, 0) scale3d(0, 0, 1)
  
  to
    opacity 1
    transform none