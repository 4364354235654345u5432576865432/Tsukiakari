.tweetitem
  padding 20px 15px 15px 10px
  border-bottom 1px solid #e7eaec

  &__body
    display -webkit-flex

  &__wrapper--avatar
    width 42px
    margin 0 15px 0 0

  &__image--avatar
    width 42px
    height auto
    border-radius 5px

  &__username
    color #2C3E50
    font-weight bold

  &__screenname
    color #95A5A6
    font-size 1rem
    margin 0 0 0 10px

  &__name-wrapper
    overflow hidden
    white-space nowrap
    text-overflow ellipsis

  &__wrapper--text
    width 80%
    padding 0
    font-size 1.3rem
    color #333

  &__text--tweet
    margin 20px 0 0 0
    color #34495E
    font-size 1.3rem

  &__retweeted
    padding 0 0 0 54px
    overflow hidden
    white-space nowrap
    text-overflow ellipsis

  &__icon
    font-size 1.2rem
    color #2C3E50

  &__message
    color #95A5A6
    font-size 1rem  

  &__message--retweeted
    color #95A5A6
    font-size 1rem
    width 200px

  &__icon--retweet
    margin 0 5px 0 0

  &__quoted
    margin 15px 0 10px 0
    border solid 1px #e7eaec
    border-radius 3px
    padding 15px

  &__media
    display flex
    width 100%
    max-width 480px
    margin 12px 0 0 0
    cursor pointer

  &__link
    color #23c6c8
    text-decoration none

    &:hover
      color #31708f

  &__media-wrapper
    &--single
      > img 
        border-radius 3px

    &--double
      padding 0
      width 50%
      border-radius 3px 0 0 3px

    &--left
      width 70%

    &--right
      width 30%
      display flex
      flex-direction column
      align-items stretch
      border-radius 0 3px 3px 0
      border-left solid 1px #fff

      div
        border-bottom solid 1px #fff

      div:first-child 
        border-radius 0 3px 0 0

      div:last-child 
        border-radius 0 0 3px 0
        border none

  &__media-image
    width 100%
    height auto
    padding 0
    margin 0
    display block
    border-radius 3px 0 0 3px 