.item-selector
  padding 4px 20px 10px 10px
  // border-bottom solid 1px #e7eaec
  // background #e7eaec
  animation-duration 0.3s
  animation-fill-mode both  
  animation-name fadeIn

  &__items
    display flex
    flex-flow row wrap

  &__avatar
    cursor pointer
    width 32px
    height auto
    margin 10px
    border-radius 5px

  &__title-wrapper
    padding 0 0 4px 10px
    font-size 1.4rem

  &__title
    padding 0 0 8px 0
    color $navy

  &__name
    font-size 1rem
    color #aaa
    margin 0 0 0 10px

  &__ul
    padding 0
    margin 3px 0 0 10px

  &__li
    list-style none
    padding 0
    margin 8px 0 10px 20px
    font-size 1.4rem
    padding 8px 20px
    width 180px
    text-align center
    border solid 1px $navy-light
    border-radius 3px
    cursor pointer
    color $navy-light
    // font-weight bold

  &__text
    margin 0 0 0 12px