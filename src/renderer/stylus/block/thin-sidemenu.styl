.thin-sidemenu
  min-height 100%
  height 100%
  min-width 64px
  padding-top 20px

  &__menu-icon-wrapper
    border-bottom solid 1px #2C3E50
    padding 0 0 6px

  &__menu-icon
    color: #fff;
    font-size: 1.6rem;
    margin: 0 auto 10px;
    display: block;
    cursor pointer
    width: 20px;

  &__list
    &--columns
      list-style none
      color #fff
      text-align center
      width: 59px;
      height: 36px;
      display: block;
      text-align: center;
      font-size: 1.8rem;
      padding: 8px 0 0;
      margin: 0;
      cursor pointer
      &:hover
        background-color #2C3E50

  &__button--addcolumn
    height 36px
    color #fff
    font-size 1.6rem
    text-align center
    padding 8px 0 0
    width 59px
    cursor pointer

    &:hover
      background #2C3E50