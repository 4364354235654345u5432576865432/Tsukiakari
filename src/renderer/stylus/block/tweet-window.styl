.tweet-window
  background #fff
  border solid 1px #e7eaec
  padding 0 0 22px 0
  border-radius 2px
  box-shadow 0 6px 12px rgba(0,0,0,0.05)
  animation-duration 0.1s
  animation-fill-mode both  
  animation-name fadeInZoom

  &__title-wrapper
    border-bottom 1px solid #e7eaec
    padding 12px 10px 6px 10px
    background #fdfdfd

  &__title
    font-size 1.4rem
    display inline-block
    width calc(100% - 36px)
    padding 0 0 0 6px
    color $grey-dark

  &__username
    font-size 1.0rem
    font-weight normal
    color #95A5A6
    margin 0 0 0 10px

  &__icon
    font-size 1.4rem
    cursor pointer
    margin 10px 6px 0 0
    padding 5px
    border-radius 50%

    &:hover
      background #f0f0f0

  &__body
    padding 5px 2px 4px 0px
    display flex

  &__textarea-wrapper
    width 100%
    height 100%

  &__item-title
    padding 0 10px
    font-size 1.2rem

  &__textarea
    width calc(100% - 30px)
    height 100%
    margin 10px 0 0 2px
    font-size 1.4rem
    color $grey-dark
    border solid 1px #e7eaec
    font-family 
    outline none
    padding 5px 5px 0 5px
    border-radius 1px
    resize none
    -webkit-font-smoothing antialiased
    text-rendering optimizeLegibility

    &:focus
      outline none !important
      border 1px solid #1cc09f

  &__avatar
    cursor pointer
    width 32px
    height 32px
    margin 8px 10px 10px 10px
    border-radius 5px
    border solid 2px rgba(0,0,0,0)
    transition all 0.1s
    font-family "Helvetica Neue", "Helvetica", "Arial", sans-serif
    &:hover
      border solid 2px #BDC3C7

  &__tooltip
    background #fafafa
    border-radius 3px
    padding 1px
    box-shadow 0 6px 12px rgba(0,0,0,0.075)
    animation-duration 0.1s
    animation-fill-mode both  
    animation-name fadeInZoom