.tweet-window
  background #fff
  border solid 1px #e7eaec
  padding 0 0 28px 0
  border-radius 1px
  box-shadow 0 6px 12px rgba(0,0,0,0.05)
  animation-duration 0.2s
  animation-fill-mode both  
  animation-name fadeInZoom

  &__title-wrapper
    border-bottom 1px solid #e7eaec
    padding 10px

  &__title
    font-size 1.4rem
    display inline-block
    width calc(100% - 32px)
    padding 0 0 0 6px

  &__username
    font-size 1.0rem
    font-weight normal
    color #95A5A6
    margin 0 0 0 10px

  &__icon
    font-size 1.4rem
    cursor pointer
    margin 0 12px 0 0

  &__body
    padding 5px 2px 4px 0px
    display flex

  &__textarea-wrapper
    width 100%
    height 100%

  &__item-title
    padding 0 10px
    font-size 1.2rem

  &__textarea
    width calc(100% - 30px)
    height 100%
    margin 10px 0 0 6px
    font-size 1.3rem
    color #2C3E50
    border solid 1px #e7eaec
    outline none
    padding 5px 5px 2px 5px
    border-radius 1px
    resize none

  &__avatar
    cursor pointer
    width 32px
    height 32px
    margin 10px
    border-radius 5px
    border solid 2px rgba(0,0,0,0)
    transition all 0.2s

    &:hover
      border solid 2px #BDC3C7

  &__tooltip
    background #f5f5f5
    border-radius 3px
    padding 1px
    box-shadow 0 6px 12px rgba(0,0,0,0.075)