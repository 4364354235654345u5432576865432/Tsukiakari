.tweet-window
  background #fff
  border solid 1px #e7eaec
  padding 0 0 40px 0
  border-radius 3px

.tweet-window__title-wrapper
  border-bottom 1px solid #e7eaec
  padding 10px

.tweet-window__title
  font-size 1.4rem
  display inline-block
  width calc(100% - 32px)
  padding 0 0 0 6px

.tweet-window__username
  font-size 1.0rem
  font-weight normal
  color #95A5A6
  margin 0 0 0 10px

.tweet-window__icon
  font-size 1.4rem
  cursor pointer
  margin 0 12px 0 0

.tweet-window__body
  padding 10px 10px 10px 3px
  display flex

.tweet-window__textarea-wrapper
  width 100%
  height 100%

.tweet-window__item-title
  padding 0 10px
  font-size 1.2rem

.tweet-window__textarea
  width calc(100% - 30px)
  height 100%
  margin 10px 0 0 6px
  font-size 1.3rem
  color #2C3E50
  border solid 1px #e7eaec
  outline none
  padding 5px
  border-radius 3px
  resize none