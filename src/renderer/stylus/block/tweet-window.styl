.tweet-window
  background #e8faf2
  border solid 1px #e7eaec
  // border solid 1px #1ABC9C
  border-radius 3px
  box-shadow 1px 6px 12px rgba(0,0,0,0.35)
  animation-duration 0.1s
  animation-fill-mode both  
  animation-name fadeInZoom

  &__username
    font-size 1.0rem
    font-weight normal
    color #95A5A6
    margin 0 0 0 10px

  &__icon
    font-size 1.4rem
    cursor pointer
    margin 10px 6px 0 0
    padding 5px
    border-radius 50%

    &:hover
      background #f0f0f0

  &__body
    padding 5px 2px 0 0px
    display flex
    height calc(100% - 108px)

  &__textarea-wrapper
    width 100%
    height 100%

  &__item-title
    padding 0 10px
    font-size 1.2rem
    font-size 1.4rem
    font-weight bold
  &__avatar
    cursor pointer
    width 32px
    height 32px
    margin 8px 10px 10px 10px
    border-radius 5px
    border solid 2px rgba(0,0,0,0)
    transition all 0.1s

    &:hover
      border solid 2px #F0F0F0

  &__tooltip
    border-radius 3px
    padding 1px
    box-shadow 0 6px 12px rgba(0,0,0,0.05)
    animation-duration 0.1s
    animation-fill-mode both  
    animation-name fadeInZoom

@import 'tweet-window-header'
@import 'tweet-editor'
@import 'tweet-window-footer'