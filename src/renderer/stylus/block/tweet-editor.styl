.tweet-editor
  width 100%
  height 100%
  position relative

  & .DraftEditor-root
    height 100%
    padding 0
    margin 10px 0 8px 0

  & .DraftEditor-editorContainer
    height 100%
    padding 0

  & .public-DraftEditorPlaceholder-root
    position absolute
    top 5px
    left 5px
    opacity 0.4
    font-size 1.2rem
    
  & .public-DraftEditor-content
    width calc(100% - 16px)
    height 100%
    font-size 1.4rem
    color $grey-dark
    font-family 
    outline none
    resize none
    -webkit-font-smoothing antialiased
    text-rendering optimizeLegibility
    font-family "Helvetica Neue", "Helvetica", "Arial", sans-serif

    & > div
      border solid 1px #1ABC9C
      max-height 100%
      min-height 100%
      overflow-y scroll
      padding 5px
      box-sizing border-box

      &::-webkit-scrollbar
        width 5px
        height 5px

      &::-webkit-scrollbar-thumb
        background #34495E
        border-radius 2px

      &:focus
        outline none !important
        border 1px solid #1cc09f