.accounts
  min-height 100%
  height 100%
  min-width 64px
  background #203446
  padding-top 20px

  &__name
    color #798795
    width 100%
    display inline-block
    font-size 0.9rem
    text-align center
    padding 0 2px
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
    font-weight bold

  &__accounts
    height calc(100% - 68px)

  &__add
    background #1ab394
    height 100%

  &__icon--add
    display block
    width 64px
    text-align center
    color #f5f5f5
    font-size 3.2rem
    line-height 48px
    margin auto
    cursor pointer

  &__account
    margin 0 0 30px

  &__tooltip
    background #fff
    width 140px
    height auto
    margin 0 0 0 50px
    border-radius 1px
