.accounts
  min-height 100%
  height 100%
  min-width 64px
  background #203446

.accounts__avatar
  width 32px
  height auto
  border-radius 3px
  margin 20px auto
  display block

.accounts__accounts
  height calc(100% - 80px)

.accounts__add
  background #1ab394
  height 100%

.accounts__icon--add
  display block
  width 36px
  color #f5f5f5
  font-size 36px
  line-height 60px
  margin auto