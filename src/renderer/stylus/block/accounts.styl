.accounts
  min-height 100%
  height 100%
  min-width 64px
  background #203446
  padding-top 20px

.accounts__avatar
  width 32px
  height auto
  border-radius 5px
  margin 0 auto 3px auto
  display block

.accounts__name
  color #798795
  width 100%
  display inline-block
  font-size 0.9rem
  text-align center
  padding 0 2px
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  font-weight bold

.accounts__accounts
  height calc(100% - 68px)

.accounts__add
  background #1ab394
  height 100%

.accounts__icon--add
  display block
  width 36px
  color #f5f5f5
  font-size 3.2rem
  line-height 48px
  margin auto