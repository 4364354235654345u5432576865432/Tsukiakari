.account-tooltip
  background #fff
  width 240px
  height auto
  position absolute
  border-radius 3px
  left 56px
  top -20px
  padding 0 0 14px
  animation-duration 0.2s
  animation-fill-mode both  
  animation-name fadeInZoom
  box-shadow: 0 6px 12px rgba(0,0,0,0.175)

  &__background
    width 100%
    height 80px
    border-radius 3px 3px 0 0
    position relative

  &__avatar
    width 36px
    height auto
    position absolute
    top 74px
    left 10px
    border-radius 3px
    border solid 1px #fff

  &__header
    padding 0 0 0px 54px
    display flex

  &__name-wrapper
    width 102px
    padding 0 0 0 5px


  &__name
    font-size 11px
    line-height 11px
    margin 5px 0 0 0
    padding 0

  &__screen-name
    font-size 9px
    line-height 11px
    color #95A5A6
    margin 0
    padding 0

  &__status
    justify-content center
    display flex

    & > div
      padding 0 0 0 5px
      width 30%
      margin 2px
      color #95A5A6

   &__status-header
      color #95A5A6
      font-size 10px     

   &__status-number
      color #34495E
      padding 0 0 0 3px
      margin 0
      font-size 16px
      line-height 16px
      font-weight bold
