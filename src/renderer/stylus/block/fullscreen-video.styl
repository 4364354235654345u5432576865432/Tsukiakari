.fullscreen-video
  position fixed
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center
  cursor pointer

  &__video
    width 100%
    height 100%
    background none
    outline none
    cursor pointer

  &__video-wrapper
    width 80%
    height auto
    animation-duration 0.1s
    animation-fill-mode both  
    animation-name fadeInZoom

    & video
      outline none
      border-radius 5px
      background none
      width 100%
      height 100%

    & video:focus
      outline none        
    & .video__controls
      border-radius 0 0 5px 5px
      background $emerald