.add-column-menu
  position absolute
  z-index 9999
  background #f5f5f5
  height 100%
  min-height 100%
  width 260px
  top 0
  left 100%
  transition margin 0.3s ease-out
  border-left solid 1px #e7eaec

.add-column-menu--is-open
  margin 0 0 0 -260px
  transition margin 0.3s ease-out

.add-column-menu__header
  border-bottom solid 1px #e7eaec
  // tiborder-top solid 3px #e7eaec
  height 60px
  width 100%
  // background #1cc09f
  // color #fff
  position relative

.add-column-menu__icon--header
  font-size 20px
  padding 2px 0 0 30px
  position absolute
  top 20px

.add-column-menu__title
  font-size 14px
  padding 0 0 0 60px
  line-height 67px

.add-column-menu__icon--close
  font-size 16px
  position absolute
  top 16px
  right 20px
  cursor pointer

.add-column-menu__bottons
  padding 24px